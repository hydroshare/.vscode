{
    "configurations": [
        {
            /* this uses docker-compose.debug.yml to allow vscode debug sessions using pydebug */
            "name": "Python: Docker Pydebug (vscode)",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/hydroshare"
              }
            ]
          }
    ]
}